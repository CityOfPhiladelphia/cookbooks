fastcgi_param WP_SITEURL '<%= node[:wordpress][:siteurl] %>';
fastcgi_param WP_HOME '<%= node[:wordpress][:home] %>';
fastcgi_param WP_DEBUG '<%= node[:wordpress][:debug] %>';

fastcgi_param AUTH_KEY '<%= node[:wordpress][:auth_key] %>';
fastcgi_param SECURE_AUTH_KEY '<%= node[:wordpress][:secure_auth_key] %>';
fastcgi_param LOGGED_IN_KEY '<%= node[:wordpress][:logged_in_key] %>';
fastcgi_param NONCE_KEY '<%= node[:wordpress][:nonce_key] %>';
fastcgi_param AUTH_SALT '<%= node[:wordpress][:auth_salt] %>';
fastcgi_param SECURE_AUTH_SALT '<%= node[:wordpress][:secure_auth_salt] %>';
fastcgi_param LOGGED_IN_SALT '<%= node[:wordpress][:logged_in_salt] %>';
fastcgi_param NONCE_SALT '<%= node[:wordpress][:nonce_salt] %>';

fastcgi_param AWS_ACCESS_KEY_ID '<%= node[:wordpress][:aws_access_key_id] %>';  
